<%= render 'scaffold/header_out' %>
<div class="container" id="user-form">
	<h2>Set Your Password</h2>

	<%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
		<%= devise_error_messages! %>
		<%= f.hidden_field :reset_password_token %>

		<%= f.password_field :password, autofocus: true,
			help: "Must be at least 7 characters long.", label: "New Password" %>
		<%= f.password_field :password_confirmation,
			label: "Confirm Password" %>

		<%= f.submit "Change my password", class: "btn btn-submit" %>
	<% end %>

</div>